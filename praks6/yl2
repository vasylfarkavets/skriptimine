#!/bin/bash
#
#Skrpit, mis k체sib reisjate arvu ja kohtade arvu bussis kasutajalt
echo
echo "Sisesta reisijate arv: "
read reisijatearv

echo "Sisesta kohtade arv bussis: "
read kohtadearv
bussidearv=$(($reisijatearv / $kohtadearv)) #mitu bussi vaja
jaak=$(($reisijatearv % $kohtadearv)) #j채채gid, ehk palju on neid kes ei mahtunud bussi
if test $jaak -gt 0
then
	bussidearv=$(($bussidearv + 1)) #kui on vaja bussi siis liidan juurde
fi
echo "Kokku on vaja $bussidearv busse"
# skipti l천pp

